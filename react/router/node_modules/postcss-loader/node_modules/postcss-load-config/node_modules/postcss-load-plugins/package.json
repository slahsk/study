    "cssnano": "^3.7.7",
    "jsdoc-to-markdown": "^2.0.0",
    "nyc": "^8.3.1",
    "postcss": "^5.2.4",
    "postcss-import": "^8.1.2",
    "postcss-nested": "^1.0.0",
    "postcss-sprites": "^4.0.0",
    "standard": "^8.4.0",
    "standard-changelog": "0.0.1",
    "sugarss": "^0.2.0"
  },
  "ava": {
    "verbose": "true"
  },
  "nyc": {
    "all": true,
    "include": [
      "index.js",
      "lib"
    ],
    "extension": [
      ".js"
    ]
  },
  "keywords": [
    "postcss",
    "postcss-plugin"
  ],
